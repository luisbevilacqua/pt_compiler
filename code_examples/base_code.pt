número minimo := 0.
texto b := "Digite um número".

número quantidade_de_numeros := 0.

faça {
  mostre(b).
  quantidade_de_numeros := leia_número.
} enquanto(quantidade_de_numeros < minimo).

número numeros_gerados := 0.

se(quantidade_de_numeros = 0) {
  mostre("Nenhum número a ser gerado").
}
senão {
  número numero_gerado := 0.
  enquanto(numeros_gerados < quantidade_de_numeros){
